{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "policy"
            ]
        },
        "variables": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "oneOf": [
                    {
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "custom"
                                ]
                            },
                            "value": {
                                "type": "string"
                            }
                        }
                    },
                    {
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "policyEffect"
                                ]
                            },
                            "value": {
                                "type": "string",
                                "enum": [
                                    "Append",
                                    "Disabled",
                                    "Modify",
                                    "Audit",
                                    "Deny",
                                    "DeployIfNotExists",
                                    "AuditIfNotExists"
                                ]
                            }
                        }
                    },
                    {
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "boolean"
                                ]
                            },
                            "value": {
                                "type": "string",
                                "enum": [
                                    "True",
                                    "False"
                                ]
                            }
                        }
                    }
                ]
            }
        },
        "items": {
            "type": "array",
